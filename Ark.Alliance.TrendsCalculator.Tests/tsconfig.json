{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "vitest/globals",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@backend/*": [
                "../Ark.Alliance.TrendsCalculator.Backend/src/*"
            ],
            "@share/*": [
                "../Ark.Alliance.TrendsCalculator.Share/src/*"
            ],
            "ark-alliance-trading-providers-lib": [
                "../Ark.Alliance.Trading.Providers.Lib/Src/index.ts"
            ],
            "ark-alliance-trading-providers-lib/*": [
                "../Ark.Alliance.Trading.Providers.Lib/Src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}