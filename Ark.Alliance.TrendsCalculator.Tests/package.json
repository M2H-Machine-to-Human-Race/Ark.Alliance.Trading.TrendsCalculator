{
    "name": "ark-alliance-trendscalculator-tests",
    "version": "1.0.0",
    "description": "JSON-based test suite for Trends Calculator mathematical helpers",
    "main": "index.js",
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:statistics": "vitest run --testPathPattern=statistics",
        "test:indicators": "vitest run --testPathPattern=indicators",
        "test:volatility": "vitest run --testPathPattern=volatility",
        "test:advanced": "vitest run --testPathPattern=advanced",
        "test:json": "vitest run --reporter=json --outputFile=reports/test-results.json",
        "build": "tsc --noEmit"
    },
    "keywords": [
        "trading",
        "tests",
        "mathematics",
        "statistics"
    ],
    "author": "Ark Alliance",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/socket.io-client": "^1.4.36",
        "@vitest/ui": "^1.0.0",
        "socket.io-client": "^4.8.3",
        "typescript": "^5.3.2",
        "vite-tsconfig-paths": "^6.0.3",
        "vitest": "^1.0.0"
    },
    "dependencies": {
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "ark-alliance-trading-providers-lib": "file:../Ark.Alliance.Trading.Providers.Lib",
        "axios": "^1.13.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
    }
}
