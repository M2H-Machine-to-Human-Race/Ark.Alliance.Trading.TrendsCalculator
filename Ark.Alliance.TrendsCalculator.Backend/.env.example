# Example .env file for Trends Calculator Backend
# Copy this to .env and fill in your values

# ============================================================================
# Server Configuration
# ============================================================================
PORT=3001
NODE_ENV=development

# Protocol Selection (production only - dev uses interactive prompt)
# Set to 'true' to force HTTPS in production
USE_HTTPS=false

# ============================================================================
# Binance Configuration
# ============================================================================
# Get API keys from: https://testnet.binancefuture.com (testnet)
# or https://www.binance.com/en/my/settings/api-management (mainnet)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Use testnet for development (true) or mainnet for production (false)
BINANCE_USE_TESTNET=true

# ============================================================================
# Google Gemini AI Configuration (Optional)
# ============================================================================
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# AI Provider Selection: 'gemini' | 'openai' | 'math-only'
AI_PROVIDER=gemini

# ============================================================================
# Trend Calculation Settings
# ============================================================================
# Buffer size for price data (minimum 50, recommended 200+)
DEFAULT_BUFFER_SIZE=200
MIN_BUFFER_SIZE=50

# EMA periods for trend calculation
EMA_SHORT_PERIOD=50
EMA_LONG_PERIOD=200

# Minimum data points required before analysis
MIN_DATA_POINTS=30

# ============================================================================
# WebSocket Settings
# ============================================================================
# Heartbeat interval in milliseconds
WS_HEARTBEAT_INTERVAL=30000

# Reconnection settings
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# ============================================================================
# Database (if used)
# ============================================================================
# DATABASE_URL=your_database_connection_string_here

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins (leave empty to allow all)
# CORS_ORIGINS=https://localhost:5173,http://localhost:5173
