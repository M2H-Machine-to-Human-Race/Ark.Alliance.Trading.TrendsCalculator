    "description": "Trend Analysis Microservice - Backend API and Mathematical Calculation Engine",
    "main": "dist/index.js",
    "scripts": {
        "dev": "npm run kill-port && ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
        "kill-port": "powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .ts",
        "generate-cert": "powershell -ExecutionPolicy Bypass -File generate-cert.ps1",
        "generate-cert-node": "node generate-cert.js"
    },
    "keywords": [
        "trading",
        "trend-analysis",
        "microservice",
        "binance",
        "ai"
    ],
