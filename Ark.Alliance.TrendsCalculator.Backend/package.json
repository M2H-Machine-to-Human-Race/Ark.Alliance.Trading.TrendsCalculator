        "ark.alliance.trendscalculator.share": "file:../Ark.Alliance.TrendsCalculator.Share",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "node-forge": "^1.3.3",
        "socket.io": "^4.8.3",
        "sql.js": "^1.13.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
        "ws": "^8.18.3",
