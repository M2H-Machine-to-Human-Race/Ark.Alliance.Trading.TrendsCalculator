        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/node-forge": "^1.3.14",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "selfsigned": "^5.4.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.2",
        "vitest": "^4.0.16"
